/*图片部分*/
.swiperClass {
  height: 360rpx;
  border-radius: 10px;
  margin: 10px 5% 5%;
  justify-content: center;
  align-items: center;
}
 
.slide-image {
  width: 100%; 
  height: 100%;
  border-radius: 10px;
  justify-content: center;
  align-items: center;
  position: relative;
}
 
image.active {
  transform: none;
  transition: all 1s ease-in 0s;
} 
 
image.quiet {
  transform: scale(0.8);
  transition: all 1s ease-in 0s;
}

