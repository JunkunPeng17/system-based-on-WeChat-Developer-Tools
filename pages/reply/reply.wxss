/* pages/reply/reply.wxss */
.comment{
	background-color: #FFF;

	margin-top: 0;
	display: flex;
	height:auto;
	flex-direction: column;
}
.info{
	flex-direction:row;
	display: flex;
}
.profile{
	margin-top:30rpx;
	margin-left: 20rpx;
	border-radius: 50%;
	width:100rpx;
	height:100rpx;
	overflow:hidden;
}
.nickname{
	margin-top: 30rpx;
	margin-left: 20rpx;
	font-size:50rpx;
	overflow:hidden;
}
.delete{
	margin-top: 20rpx;
	margin-left:320rpx;
	overflow:hidden;
	font-size:50rpx;
}
.text1{
	margin-bottom:30rpx;
	margin-right:20rpx;
	margin-top: 30rpx;
	margin-left: 20rpx;
  text-align: left;
	overflow: hidden;
	display:flex;
	word-break: break-all;
	word-wrap: break-word;
  flex-wrap: wrap;
	font-size: 33rpx;
}
.interval{
	background-color: #FFF;
	margin-top:20rpx;
	display:flex;
	flex-direction:row;
	border-bottom:1rpx solid rgba(204, 204, 204, 0.747);
	height:80rpx;
}
.message{
	margin-top:10rpx;
	margin-left:10rpx;
	/* font-size:80rpx; */
}
.count{
	margin-top:10rpx;
  text-align: left;
	overflow: hidden;
	display:flex;
	font-size:40rpx;
	font-weight:600;
}
.reply{
	background-color: #FFF;

	margin-top: 0;
	display: flex;
	height:auto;
	flex-direction: column;
}
.replyinfo{
	flex-direction:row;
	display: flex;
}
.replyprofile{
	margin-top:30rpx;
	margin-left: 20rpx;
	border-radius: 50%;
	width:60rpx;
	height:60rpx;
	overflow:hidden;
}
.replynickname{
	margin-top: 30rpx;
	margin-left: 20rpx;
	font-size:30rpx;
	overflow:hidden;
}
.reply_replynickname{
	margin-top: 10rpx;
	margin-left: 10rpx;
	margin-right: 10rpx;
	font-size:30rpx;
	overflow:hidden;
}
.text2{
	margin-bottom:20rpx;
	margin-right:20rpx;
	margin-top: 20rpx;
	margin-left: 20rpx;
  text-align: left;
	overflow: hidden;
	display:flex;
	word-break: break-all;
	word-wrap: break-word;
  flex-wrap: wrap;
	font-size: 33rpx;
}
.replybutton{
	position:fixed;
	bottom: 0;
	width:100%;
	background-color:rgb(233, 233, 233);
	display:flex;
	flex-direction:row;
	height:80rpx;
 	justify-content: center;  
}
.replyicon{
	margin-top:-55rpx;
}
.replytext{
	margin-top:-10rpx;
	font-size:40rpx;
}
.replybottom{
	position:fixed;
	overflow: hidden;
	display: flex;
	height: 80rpx;
  bottom: 0rpx;
	width:100%;
	background-color:rgb(233, 233, 233);
}
.replyInput{
	width:70%;
	background-color: #FFF;
	margin-left:30rpx;
	margin-top:10rpx;
	border-radius: 5rpx;
	height:60rpx;
}
.sendbutton{
	margin-top:10rpx;
	text-align:center;
	height:60rpx;
	border-radius: 10rpx;
	font-size:30rpx;
	line-height:60rpx;
}

